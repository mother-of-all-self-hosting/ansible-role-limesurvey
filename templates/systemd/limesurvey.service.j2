[Unit]
Description=LimeSurvey ({{ limesurvey_identifier }})
{% for service in limesurvey_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in limesurvey_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ limesurvey_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ limesurvey_identifier }} 2>/dev/null || true'

{#
  Running as root with additional capabilities is required for starting the LimeSurvey container.
#}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ limesurvey_identifier }} \
      --log-driver=none \
      --cap-drop=ALL \
      --cap-add=CAP_DAC_OVERRIDE \
      --cap-add=CAP_FOWNER \
      --cap-add=CHOWN \
      --cap-add=SETGID \
      --cap-add=SETUID \
      --network={{ limesurvey_container_network }} \
      {% if limesurvey_container_http_host_bind_port %}
      -p {{ limesurvey_container_http_host_bind_port }}:{{ limesurvey_container_http_port }} \
      {% endif %}
      --env-file={{ limesurvey_base_path }}/env \
      --label-file={{ limesurvey_base_path }}/labels \
      --mount type=bind,src={{ limesurvey_config_path }},dst=/var/www/html/application/config \
      --mount type=bind,src={{ limesurvey_plugin_path }},dst=/var/www/html/plugins \
      --mount type=bind,src={{ limesurvey_upload_path }},dst=/var/www/html/upload \
      {% for volume in limesurvey_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      {% for arg in limesurvey_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ limesurvey_container_image }}

{% for network in limesurvey_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ limesurvey_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ limesurvey_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ limesurvey_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ limesurvey_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ limesurvey_identifier }}

[Install]
WantedBy=multi-user.target
